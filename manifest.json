{
  "manifest_version": 3,
  "name": "AltText AI",
  "version": "1.0",
  "description": "Generate alt text for images using AI.",
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
